        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="200" Width="512">              
            <Button x:Name="Start" Content="Start" Width="75" Click="Start_Click" Height="50" HorizontalAlignment="Left" />           
           
            <Button x:Name="Zoom2" Content="Zoom" Width="75" Height="50" Click="Zoom_Click" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
