        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024"
       >
    <Grid>
        <Canvas x:Name="MainCanvas" Background="SeaGreen"  Height="384" Width="512" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!--<Canvas.RenderTransform>
                <MatrixTransform/>
            </Canvas.RenderTransform>-->        
            <Image Name="Image" Source="Content/Images/MovingTractor.png"  Height="64" Width="64" Canvas.Left="268" Canvas.Top="364"></Image>

